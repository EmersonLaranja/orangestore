{% extends "layout.njk" %}

{% block content %}
  <section class="container form">

    <form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">
      <div class="header">
        <h3>Edit a Product</h3>
      </div>
      <div class="fields">
        {%include 'products/fields.njk'%}
        <input type="hidden" name="id" value="{{product.id}}">
      </div>
      <button class="button edit" type="submit">Update</button>
    </form>

    <form action="/products?_method=DELETE" id="form-delete" method="post">
      <input type="hidden" name="id" value="{{product.id}}">
      <button type="submit" class="button delete">Delete</button>
    </form>
  </section>

  <script>
    const formDelete = document.querySelector("#form-delete")
    formDelete.addEventListener("submit", (event) => {
      const confirmation = confirm("Delete it?")
      if (!confirmation) {
        event.preventDefault()
      }
    })
  </script>
{% endblock content %}